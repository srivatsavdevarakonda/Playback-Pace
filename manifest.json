{
  "manifest_version": 3,
  "name": "Playback Pace",
  "version": "1.0",
  "description": "The definitive, universal calculator for the finish time of any YouTube video or Short.",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*",
        "*://*.youtube.com/shorts/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}